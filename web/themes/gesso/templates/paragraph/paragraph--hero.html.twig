{% set paragraph = content.field_hero_button|field_value %}
{% set button = {} %}

{% for key, s in paragraph %}
  {% set button = button|merge(
      {
        (key): {
          'buttonUrl': s['#paragraph'].field_button_url.value,
          'buttonLabel': s['#paragraph'].field_button_label.value
        }
      }
    )
  %}
{% endfor %}

{% include '@components/hero-bg-image/hero-bg-image.twig'
  with {
    "image": content.field_background_image|render|trim,
    "title": content.field_hero_title|field_value,
    "summary": content.field_hero_text|field_value,
    "hasButton": true,
    "button": button
  }
%}
