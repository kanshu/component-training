{%
  set classes = [
    'hero-bg-image',
    customClass ? customClass,
  ]|join(' ')|trim
%}

<div class="{{ classes }}" style="background-image: url({{ image }});">
  <div class="l-constrain">
    <div class="hero-bg-image__content">
      {% if title %}
        <h1 class="hero-bg-image__title">{{ title }}</h1>
      {% endif %}
      {% if summary %}
        <div class="hero-bg-image__text">{{ summary }}</div>
      {% endif %}
      {% if hasButton %}
        <div class="hero-bg-image__call-to-action">
          {% include "@components/button/button.twig"
            with {
              "buttonLabel": "Learn More",
              "buttonUrl": ""
            }
          %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
